<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.sadhar.rpl.controller.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>controller.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DaftarCustomer</servlet-name>
        <servlet-class>com.sadhar.rpl.controller.DaftarCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DaftarPenjual</servlet-name>
        <servlet-class>com.sadhar.rpl.controller.DaftarPenjual</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.sadhar.rpl.controller.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.sadhar.rpl.controller.logoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailProdukServlet</servlet-name>
        <servlet-class>com.sadhar.rpl.controller.DetailProdukServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>com.sadhar.rpl.controller.AddCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditCartServlet</servlet-name>
        <servlet-class>com.sadhar.rpl.controller.EditCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditAkunServlet</servlet-name>
        <servlet-class>com.sadhar.rpl.controller.EditAkunServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PreeditAkunCustomer</servlet-name>
        <servlet-class>com.sadhar.rpl.controller.PreeditAkunCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCartServlett</servlet-name>
        <servlet-class>com.sadhar.rpl.controller.AddCartServlett</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DaftarCustomer</servlet-name>
        <url-pattern>/DaftarCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DaftarPenjual</servlet-name>
        <url-pattern>/DaftarPenjual</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailProdukServlet</servlet-name>
        <url-pattern>/DetailProdukServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/AddCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditCartServlet</servlet-name>
        <url-pattern>/EditCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditAkunServlet</servlet-name>
        <url-pattern>/EditAkunServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PreeditAkunCustomer</servlet-name>
        <url-pattern>/PreeditAkunCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCartServlett</servlet-name>
        <url-pattern>/AddCartServlett</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
